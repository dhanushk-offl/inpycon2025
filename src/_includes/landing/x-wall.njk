{% from "components/button.njk" import button %}
<!-- Your Twitter Wall Section -->
<section class="relative bg-[#f9fcff] py-20 px-4 md:px-8 lg:px-20 overflow-hidden">
  <div class="max-w-7xl mx-auto relative z-10">
    <h2 class="text-4xl font-black mb-20 text-black">Twitter Wall</h2>

    <div class="flex justify-center items-center mb-12">
      <div class="relative w-full max-w-xl">
        <!-- Pink heart moved 4px away from content -->
        <div class="absolute 
                    -left-4 sm:-left-8 md:-left-20 
                    -top-12 sm:-top-8 md:-top-20 
                    w-14 sm:w-20 md:w-40 
                    h-12 sm:h-16 md:h-24 
                    overflow-visible opacity-70 
                    mix-blend-multiply z-20 
                    rotate-[-5deg] transition-all 
                    duration-300 animate-bounce-slow">
          <img src="/img/assets/pink-heart-dotted.svg" 
               alt="Decorative element" 
               class="w-full h-full object-contain">
        </div>

        <!-- Green star moved 4px away from content -->
        <div class="absolute 
                    -right-4 sm:-right-6 md:-right-10 
                    -bottom-4 sm:-bottom-6 md:-bottom-10 
                    opacity-70 mix-blend-multiply z-20 
                    rotate-[5deg]">
          <img src="/img/assets/star-lime-vector.svg" 
               alt="Decorative element" 
               class="w-12 sm:w-14 md:w-16 
                      h-12 sm:h-14 md:h-16 
                      animate-spin-slow">
        </div>

        <div class="absolute left-0 top-0 h-full w-2 bg-[#4e62f5]"></div>

        <div class="bg-white border border-black ml-2 p-6 rounded-sm shadow-md">
          <div class="twitter-embed-container h-[500px] overflow-y-auto">
            <a class="twitter-timeline" 
               data-height="500" 
               data-theme="light" 
               href="https://twitter.com/pyconindia?ref_src=twsrc%5Etfw">
               Tweets by pyconindia
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="flex justify-center">
      {{ button(text="See More", url="https://x.com/pyconindia", lime_bg=true) }}
    </div>
  </div>
</section>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
